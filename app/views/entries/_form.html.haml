= form_with model: @song, url: live_entries_path do |f|

  .form-row
    .form-group.col-sm
      = f.label :name, class: 'col-form-label'
      = f.text_field :name, id: 'song_name', class: 'form-control', placeholder: 'Tears in Heaven'
    .form-group.col-sm
      = f.label :artist, class: 'col-form-label'
      = f.text_field :artist, id: 'song_artist', class: 'form-control', placeholder: 'Eric Clapton', list: 'artists'
      %datalist#artists
        - Song.artists_for_suggestion.each do |artist|
          %option{ value: artist }

  = render 'songs/playings_form', f: f

  .form-group
    = render 'songs/status_form', f: f

  .form-row
    .form-group.col-sm
      = f.label :preferred_rehearsal_time, 'リハーサル希望時間'
      = f.text_area :preferred_rehearsal_time, id: 'song_preferred_rehearsal_time', class: 'form-control'
    .form-group.col-sm
      = f.label :preferred_performance_time, '演奏希望時間'
      = f.text_area :preferred_performance_time, id: 'song_preferred_performance_time', class: 'form-control'

  .form-group
    = f.label :notes, '備考'
    = f.text_area :notes, id: 'song_notes', class: 'form-control', rows: 3

  = f.submit 'Send', data: { confirm: '本当に送信しますか？' }, class: 'btn btn-primary'
