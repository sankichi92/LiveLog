%header.content-header
  .container-fluid
    .row.mb-3
      .col-sm-6
        %h1
          ID: #{@song.id} 編集

      .col-sm-6
        %ol.breadcrumb.float-sm-right
          %li.breadcrumb-item= link_to 'Home', admin_root_path
          %li.breadcrumb-item= link_to Live.model_name.human, admin_lives_path
          %li.breadcrumb-item= link_to @song.live.title, admin_live_path(@song.live)
          %li.breadcrumb-item.active ID: #{@song.id} 編集

%section.content
  .container-fluid
    %section.card
      = render 'admin/songs/form', model: @song, url: admin_song_path(@song)

