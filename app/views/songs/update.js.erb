var form = document.getElementById('form-song-<%= @song.id %>')

var currentAlerts = form.getElementsByClassName('alert')
if (currentAlerts[0]) {
  form.removeChild(currentAlerts[0]);
}

var newAlert = document.createElement('div')
newAlert.classList.add('alert');

<% if @song.errors.any? %>
newAlert.classList.add('alert-danger');
newAlert.textContent = '<%= @song.errors.full_messages.join(' / ') %>'
<% else %>
newAlert.classList.add('alert-success');
newAlert.textContent = '<%= @song.title %>　を更新しました'
<% end %>

form.insertBefore(newAlert, form.firstChild);
