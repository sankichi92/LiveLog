%section.card.mb-3
  .card-body
    .card-title#playlist-label{ 'data-show-live': !current_page?(songs.first.live) }
    %audio.d-block.mb-2#playlist{ controls: true, 'data-songs': songs.to_json(only: :order, methods: %i[live_title title audio_url]) }
    .btn-group
      %button.btn.btn-secondary#playlist-backward{ type: 'button' }= icon 'fas', 'step-backward'
      %button.btn.btn-secondary#playlist-forward{ type: 'button' }= icon 'fas', 'step-forward'
