.song-item.d-flex.flex-column.flex-md-row.align-items-md-center
  - if song.watchable?(current_user)
    = image_tag song.youtube_thumbnail, class: 'img-fluid img-thumbnail mb-2 mb-md-0 mr-md-3'
  .song-info
    = link_to song.live_title, song.live unless current_page?(song.live) || params[:controller] == 'entries'
    = song.time_order
    %h4
      = song.title
      %small= '(オリジナル曲)' if song.original?
      = status_icon(song) if current_user&.played?(song)
    %ul.list-inline.mb-2
      = render song.playings.sort_by(&:inst_order)
    = simple_format(song.comment) if song.comment?
    = link_to icon('pencil') + ' Edit', edit_song_path(song) if song.editable?(current_user)
