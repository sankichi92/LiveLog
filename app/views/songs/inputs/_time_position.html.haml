.form-row
  - if f.object.live.nf?
    .form-group.col
      = f.label :time, class: 'col-form-label'
      = f.time_field :time, class: 'form-control', placeholder: '10:00'
  .form-group.col
    = f.label :position, class: 'col-form-label'
    = f.number_field :position, class: 'form-control', placeholder: '1'
