= f.hidden_field :_destroy, value: 0
.form-group{ id: "song_playings_attributes_#{f.index}_fields" }
  = f.label :user
  .form-row
    .col-3.col-md-2
      = f.text_field :inst, class: 'inst-field form-control', placeholder: 'Gt&Vo', list: 'instruments'
    .col
      = f.collection_select :member_id, Member.regular_order, :id, :joined_year_and_name, {}, class: 'member-select select2 form-control'
    .col-2.col-md-1
      = content_tag :button, icon('fas', 'minus'), type: 'button', class: 'remove-member btn btn-block btn-light', data: { prefix: "song_playings_attributes_#{f.index}" }

