- provide(:title, "#{@member.name}を招待する")

%header
  %h1.h2 #{@member.name}さんを招待する

%hr

.row
  = render @member

%section
  = form_with model: @user, url: member_user_path(@member), method: :post do |form|
    = render 'shared/error_messages', errors: @user.errors

    .form-group
      = form.label :email
      = form.email_field :email, required: true, class: 'form-control'

    = form.submit '招待する', class: 'btn btn-primary'
