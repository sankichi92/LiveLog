- provide(:title, 'ユーザー登録')

= form_with model: @user, url: member_user_path(@member), local: true do |form|

  = render 'shared/error_messages', errors: @user.errors

  = hidden_field_tag :token, params[:token]

  .form-group
    = form.label :password
    = form.password_field :password, required: true, class: 'form-control'

  .form-group
    = form.label :password_confirmation
    = form.password_field :password_confirmation, required: true, class: 'form-control'

  = form.submit class: 'btn btn-primary'
