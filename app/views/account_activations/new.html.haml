- provide(:title, "Invite #{@user.name}")
%header.page-header
  %h1
    Send an Invitation to
    = @user.name

= form_for @user, url: user_activation_path, html: { method: :post } do |f|
  = render 'shared/error_messages', object: f.object

  = render 'users/email_form', f: f

  = f.submit t('views.application.send'), class: 'btn btn-primary'
