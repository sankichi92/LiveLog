- provide(:title, 'Activation')
%header.page-header
  %h1 Activation

= form_for @user, url: user_activation_path do |f|
  = render 'shared/error_messages', object: f.object
  = hidden_field_tag :t, params[:t]

  %fieldset{ disabled: true }
    .form-group
      = f.label :joined
      = f.number_field :joined, class: 'form-control'
    .form-row
      .form-group.col
        = f.label :last_name, class: 'col-form-label'
        = f.text_field :last_name, class: 'form-control'
      .form-group.col
        = f.label :first_name, class: 'col-form-label'
        = f.text_field :first_name, class: 'form-control'

  = render 'passwords/form', f: f, label: 'パスワードを作成'

  = f.submit 'アカウントを有効化する', class: 'btn btn-primary'
